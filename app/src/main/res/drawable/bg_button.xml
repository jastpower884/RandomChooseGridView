<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">

        <shape>
            <solid android:color="#27cccb"/>
            <stroke android:color="#27cccb"
                    android:width="1dp"/>


        </shape>

    </item>

    <item android:state_pressed="true">

        <shape>
            <solid android:color="#27cccb"/>
            <stroke android:color="#27cccb"
                    android:width="1dp"/>


        </shape>

    </item>

    <item>

        <shape>
            <solid android:color="#242424"/>
            <stroke android:color="#2d2d2d"
                    android:width="1dp"/>

        </shape>

    </item>


</selector>